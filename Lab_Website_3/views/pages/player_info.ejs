<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				  <%
				  var image_src = '../resources/img/helmet.jpg';

					if(player_info) {
						var image_src = player_info.img_src ;
					}
				  %>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id,
							 			but will display the player's name-->
										<%
											if(result_1)
											{
												var h = '';
												for(var i = 0; i < result_1.length; i++) {

													h+= "<option value=" + result_1[i].id + ">" + result_1[i].name + "</option>"

													 }; %>

												<%- h %>

									<%	} %>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">

							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->



							<tr>
							<th>Year</th>
							<td>
										<% if(player_info){
												var temp = player_info.year;

									 } %>

									 <%- temp%>
							</td>
						</tr>
						<tr>
							<th>Major</th>
							<td>
								<% if(player_info){
										var temp = player_info.major;

							 } %>

							 <%- temp%>

							</td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td>
								<% if(result_3) {

										var j = 0;
										for(var i = 0; i < result_3.length; i++)
										{

											j++;
										}
								} %>

								<%- j%>

							</td>
						</tr>
						<tr>
							<td>Passing Yards:
								<% if(player_info) {

									var a = player_info.passing_yards;
									var b = Math.floor(a / j);
								} %>

								<%- a %>

							</td>
							<td>Avg. Passing Yards:
								<%- b%>

							</td>
						</tr>
						<tr>
							<td>Rushing Yards:
								<% if(player_info) {

									var c = player_info.rushing_yards;
									var d = Math.floor(c / j);
								} %>

								<%- c %>

							</td>
							<td>Avg. Rushing Yards:
								<%- d%>
							</td>
						</tr>
						<tr>
							<td>Receiving Yards:
								<% if(player_info) {

									var e = player_info.receiving_yards;
									var f = Math.floor(e / j);
								} %>

								<%- e %>


							</td>
							<td>Avg. Receiving Yards:

								<%- f%>
							</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
